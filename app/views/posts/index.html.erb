<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th> <!--Add header here-->
      <th colspan="3"></th>
    </tr>
  </thead>


<tbody>

<div id="posts">
  <% @posts.each do |post| %>
    <% render post %>

    <tr>
    <!-- The current post's title -->
    <td><%= post.title %></td>
    <!-- Add body attribute here -->
    <td><%= post.body %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
   
  <% end %>
</div>

</tbody>
</table>

<%= link_to "New post", new_post_path %>
